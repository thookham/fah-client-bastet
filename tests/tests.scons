Import('*')

env.Append(CPPPATH = ['#/src'])

# Source
src = [
    'UnitMetricsTest.cpp', '../src/fah/client/UnitMetrics.cpp',
    'GroupTest.cpp', '../src/fah/client/Group.cpp',
    '../src/fah/client/App.cpp', '../src/fah/client/Config.cpp'
]

# Test binary
tests = env.Program('run-tests', src)

# Run tests
test_run = env.Command('test-run', tests, '${SOURCE}')
Alias('test', test_run)

Default(tests)
